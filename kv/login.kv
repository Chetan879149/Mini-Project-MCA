<LoginSignupScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.12, 0.12, 0.12, 1  # Blackish background
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            width: min(370, root.width * 0.92)
            height: self.minimum_height
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            spacing: 30
            padding: [0, 35, 0, 35]

            # Top Logo
            Image:
                source: 'assets/logo2.png'
                size_hint: None, None
                size: 220, 70
                allow_stretch: True
                pos_hint: {'center_x':0.5}

            # App Name
            Label:
                text: "Login"
                font_size: '27sp'
                bold: True
                color: 0.1, 0.7, 0.5, 1
                size_hint: None, None
                size: 200, 40
                pos_hint: {'center_x':0.5}

            # Form Box
            BoxLayout:
                id: form_layout
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                padding: [26,24,26,24]
                spacing: 13
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [14,]

                TextInput:
                    id: adhar_input
                    hint_text: "Aadhar No."
                    multiline: False
                    background_normal: ''
                    background_color: 0.96,0.99,0.97,1
                    foreground_color: 0.13,0.49,0.37,1
                    size_hint_y: None
                    height: 38
                    font_size: '17sp'
                    padding: [15,11]
                    radius: [6,]

                TextInput:
                    id: password_input
                    hint_text: "Password"
                    multiline: False
                    password: True
                    background_normal: ''
                    background_color: 0.96,0.99,0.97,1
                    foreground_color: 0.13,0.49,0.37,1
                    size_hint_y: None
                    height: 38
                    font_size: '17sp'
                    padding: [15,11]
                    radius: [6,]

                Button:
                    id: role_btn
                    text: root.role_selected
                    size_hint_y: None
                    height: 38
                    background_color: 0.13,0.49,0.37,1
                    color: 1,1,1,1
                    font_size: '17sp'
                    radius: [6,]
                    on_release: root.toggle_role_dropdown()

                Button:
                    text: "Log In"
                    height: 42
                    size_hint_y: None
                    background_color: 0.13,0.49,0.37,1
                    color: 1,1,1,1
                    font_size: '18sp'
                    bold: True
                    radius: [8,]
                    on_release: root.validate_login()

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 4
                    size_hint_y: None
                    height: 28

                    Button:
                        text: "Forgot password?"
                        color: 0.18,0.34,0.82,1
                        background_color: 0,0,0,0
                        font_size: '14sp'
                        size_hint_x: 0.6
                        underline: True

                    Button:
                        text: "Sign In"
                        color: 0.18,0.34,0.82,1
                        background_color: 0,0,0,0
                        font_size: '14sp'
                        size_hint_x: 0.4
                        underline: True
