<LoginSignupScreen>:
    FloatLayout:
        # White background (unchanged)
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # Logo
        Image:
            source: "assets/logo2.png"
            allow_stretch: True
            keep_ratio: True
            size_hint_y: None
            height: dp(86)
            pos_hint: {"top": 0.99, "center_x": 0.5}

        # Login Title
        Label:
            text: "Login"
            font_size: "26sp"
            bold: True
            color: 0.13, 0.49, 0.37, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.78}

        # Centered Form (Card Style)
        FloatLayout:
            size_hint: 0.85, None
            height: dp(300)
            pos_hint: {"center_x": 0.5, "center_y": 0.43}

            # Soft shadow effect (fake with semi-transparent layer)
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.08  # light black shadow
                RoundedRectangle:
                    pos: self.x + dp(3), self.y - dp(3)
                    size: self.width, self.height
                    radius: [18,]
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [18,]
                Color:
                    rgba: 0.85, 0.85, 0.85, 1
                Line:
                    width: 1.2
                    rounded_rectangle: (self.x, self.y, self.width, self.height, dp(18))

            # Centered elements inside the card
            BoxLayout:
                orientation: "vertical"
                size_hint: None, None
                size: self.parent.width * 0.9, self.parent.height * 0.9
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                spacing: 11

                TextInput:
                    hint_text: "Aadhar No."
                    multiline: False
                    background_normal: ''
                    background_color: 0.96, 0.99, 0.97, 1
                    foreground_color: 0.13, 0.49, 0.37, 1
                    size_hint_y: None
                    height: dp(40)
                    font_size: '15sp'
                    padding: [10, 10]
                    radius: [6,]

                TextInput:
                    hint_text: "Password"
                    multiline: False
                    password: True
                    background_normal: ''
                    background_color: 0.96, 0.99, 0.97, 1
                    foreground_color: 0.13, 0.49, 0.37, 1
                    size_hint_y: None
                    height: dp(40)
                    font_size: '15sp'
                    padding: [10, 10]
                    radius: [6,]

                Spinner:
                    text: "Select Role"
                    values: ["Admin", "Doctor", "Patient"]
                    size_hint_y: None
                    height: dp(30)
                    background_color: 0.13, 0.49, 0.37, 1
                    color: 1, 1, 1, 1
                    font_size: "14sp"

                Button:
                    text: "Log In"
                    size_hint_y: None
                    height: dp(36)
                    background_color: 0.13, 0.49, 0.37, 1
                    color: 1, 1, 1, 1
                    font_size: '16sp'
                    bold: True
                    radius: [8,]
                    on_release: root.validate_login()

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 6
                    size_hint_y: None
                    height: dp(28)
                    pos_hint: {"center_x": 0.5}

                    Button:
                        text: "Forgot password?"
                        color: 0.18, 0.34, 0.82, 1
                        background_color: 0, 0, 0, 0
                        font_size: '14sp'
                        size_hint_x: 0.6

                    Button:
                        text: "Sign In"
                        color: 0.18, 0.34, 0.82, 1
                        background_color: 0, 0, 0, 0
                        font_size: '14sp'
                        size_hint_x: 0.4
